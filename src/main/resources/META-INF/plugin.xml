<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.inxilpro.windyidea</id>

    <name>Windy IDEA (Tailwind Auto-Formatting)</name>

    <vendor url="https://twitter.com/inxilpro">
        Chris Morrell
    </vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileDocumentManagerListener
                id="com.github.inxilpro.windyidea.listeners.WindyIdeaDocumentListener"
                implementation="com.github.inxilpro.windyidea.listeners.WindyIdeaDocumentListener"
        />
    </extensions>

</idea-plugin>
